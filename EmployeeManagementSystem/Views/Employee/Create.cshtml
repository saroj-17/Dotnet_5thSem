@model EmployeeManagementSystem.Models.Employee

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Create Employee";
}

<h2>Create Employee</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="EmpNo"></label>
        <input asp-for="EmpNo" />
    </div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
    </div>
    <div>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
    </div>
    <div>
        <label asp-for="Company"></label>
        <input asp-for="Company" />
    </div>
    <div>
        <label asp-for="Department"></label>
        <input asp-for="Department" />
    </div>
    <div>
        <label asp-for="JoiningDate"></label>
        <input asp-for="JoiningDate" type="date" />
    </div>
    <div>
        <label asp-for="Salary"></label>
        <input asp-for="Salary" />
    </div>
    <button type="submit">Save</button>
</form>

@if (ViewBag.Message != null)
{
    <p style="color:green">@ViewBag.Message</p>
}
