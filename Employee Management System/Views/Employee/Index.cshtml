@model List<EmployeeManagementSystem.Models.Employee>
@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>
<p>
    <a href="/Employee/Create">Create New Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> EmpNo</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Company</th>
            <th>Department</th>
            <th>Joining Date</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmpNo</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.PhoneNo</td>
                <td>@employee.Company</td>
                <td>@employee.Department</td>
                <td>@employee.JoiningDate.ToShortDateString()</td>
                <td>@employee.Salary.ToString("C")</td> //currency format
                <td>
                    <a href="/Employee/Detail/@employee.EmpNo">Details</a>
                    <a href="/Employee/Edit/@employee.EmpNo">Edit</a>
                    <a href="/Employee/Delete/@employee.EmpNo" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
