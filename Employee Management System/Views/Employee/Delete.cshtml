@model EmployeeManagementSystem.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Confirm Delete</h2>
<p>Are you sure you want to delete this employee?</p>

<table class= "table">
    <tr>
        <th>Employee No</th>
        <td>@Model.EmpNo</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Phone No</th>
        <td>@Model.PhoneNo</td>
    </tr>
    <tr>
        <th>Company</th>
        <td>@Model.Company</td>
    </tr>
    <tr>
        <th>Department</th>
        <td>@Model.Department</td>
    </tr>
    <tr>
        <th>Joining Date</th>
        <td>@Model.JoiningDate.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Salary</th>
        <td>@Model.Salary.ToString("C")</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmpNo" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>